<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="nom" value="<%= data.nom%>" placeholder="Nom" class="form-control" autofocus
              required>
          </div>
          <div class="form-group">
            <input type="text" name="prenom" value="<%= data.prenom%>" placeholder="Prenom" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="adresse" value="<%= data.adresse%>" placeholder="Adresse" class="form-control"
              autofocus required>
          </div>
          <div class="form-group">
            <input type="text" name="codePostal" value="<%= data.codePostal%>" placeholder="Code Postal"
              class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="genre" value="<%= data.genre%>" placeholder="Genre" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="numCarteIdentite" value="<%= data.numCarteIdentite%>"
              placeholder="Num Carte d'Identite" class="form-control" autofocus required>
          </div>
          <div class="form-group">
            <input type="text" name="numPermisConduire" value="<%= data.numPermisConduire%>"
              placeholder="Num Permis Conduire" class="form-control">
          </div>
          <div class="form-group">
            <input type="number" name="role" value="<%= data.role%>" placeholder="RÃ´le" class="form-control">
          </div>
          <div class="form-group">
            <input type="email" name="email" value="<%= data.email%>" placeholder="Email" class="form-control">
          </div>
          <div class="form-group">
            <input type="password" name="mdp" value="<%= data.mdp%>" placeholder="Mot de passe" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Enregistrer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Longitude</td>
            <td>Latitude</td>
			    </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].longitude %></td>
                <td><%= data[i].latitude %></td>
                <td>
                  <a href="points/update/<%= data[i].id %>" class="btn btn-info">Modifier</a>
                  <a href="points/delete/<%= data[i].id %>" class="btn btn-danger">Supprimer</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <div class="card-body">
		<% if (messages.error) { %>
	  <p style="color:red"><%- messages.error %></p>
	<% } %>
	  
	<% if (messages.success) { %>
		<p style="color:green"><%- messages.success %></p>
	<% } %>
        <form action="/admin/points/add" method="POST">
          <div class="form-group">
            <input type="text" name="longitude" placeholder="Longitude" class="form-control" autofocus required>
          </div>
          <div class="form-group">
            <input type="text" name="latitude" placeholder="Latitude" class="form-control">
          </div>
		
         
          <button type="submit" class="btn btn-primary btn-rounded">
            Enregistrer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
